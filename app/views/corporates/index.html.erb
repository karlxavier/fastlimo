<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Corporate Clients</h2>
        <ol class="breadcrumb">
            <li>                
                <%= link_to 'Home', root_path %>
            </li>         
            <li class="active">
                <strong>Corporate Clients</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Clients - <small>All Corporate clients under Fast Limo.</small></h5>
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">
                        <div class="col-md-1">
                            <button type="button" id="loading-example-btn" onClick="window.location.reload()" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> Refresh</button>
                        </div>
                        <div class="col-md-11">
                            <div class="input-group"><input type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                <button type="button" class="btn btn-sm btn-primary"> Go!</button> </span></div>
                        </div>
                    </div>
                    <div class="project-list">
                        <table class="table table-hover">
                            <tbody>
                                <% @corporates.each do |corporate| %>
                                    <tr>
                                        <td class="project-status">
                                            <% if corporate.corporate_status_id == 1 %>
                                                <span class="label label-primary">
                                                    <%= corporate.corporate_status.status %>
                                                </span>
                                            <% else %>
                                                <span class="label label-danger">
                                                    <%= corporate.corporate_status.status %>
                                                </span>
                                            <% end %>
                                        </td>                                  
                                        <td class="project-title">                                                                                        
                                            <a href="#">
                                                <%= corporate.name %>
                                            </a>
                                            <br>
                                            <small><%= corporate.created_at %></small>
                                        </td>
                                        <td class="project-completion">
                                            <p><small>Total Bookings: </small><strong><%= corporate.bookings.count %></strong></p>
                                        </td>     
                                        <td class="project-completion">
                                            <small><%= truncate(corporate.address, length: 50) %></small>                                              
                                        </td>                                                                       
                                        <td class="project-actions">                                            
                                            <%= link_to edit_corporate_path(id: corporate.id), class: "btn btn-white btn-sm" do %>       
                                                <i class="fa fa-pencil"></i> 
                                                <span class="nav-label">Edit</span>
                                            <% end %>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>