<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>All Corporate Bookings</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to 'Home', root_path %>
            </li>        
            <li class="active">
                <strong>Bookings</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lists - <small>You can see all corporate bookings and their status.</small></h5>
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">
                        <div class="col-md-1">
                            <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> Refresh</button>
                        </div>
                        <div class="col-md-11">
                            <div class="input-group"><input type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                <button type="button" class="btn btn-sm btn-primary"> Go!</button> </span></div>
                        </div>
                    </div>
                    <div class="project-list">
                        <table class="table table-hover">
                            <tbody>
                                <% @bookings.each do |booking| %>
                                    <tr>
                                        <td class="project-status">
                                            <span class="label label-primary">
                                                <%= booking.booking_status.status %>
                                            </span>
                                        </td>
                                        <td class="project-status">
                                            <h4 class="text-success"><%= truncate(booking.corporate.name, length: 10) %></h4>
                                        </td>
                                        <td class="project-status">
                                            <h4><%= booking.reference_no %></h4>
                                        </td>
                                        <td class="project-title">                                                                                        
                                            <a href="#">
                                                <%= booking.passenger_name %>
                                            </a>
                                            <br>
                                            <small><%= booking.book_date.strftime('%m/%d/%Y') %></small>
                                        </td>
                                        <td class="project-completion">
                                            <small><%= truncate(booking.from_name, length: 30) %></small>                                              
                                        </td>    
                                        <td class="project-completion">
                                            <small><%= truncate(booking.to_name, length: 30) %></small>                                              
                                        </td>                                      
                                        <td class="project-actions">                                            
                                            <%= link_to exe_bookings_path(book_id: booking.id), class: "btn btn-success btn-sm" do %>       
                                                <i class="fa fa-retweet"></i> 
                                                <span class="nav-label">Execute</span>
                                            <% end %>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>